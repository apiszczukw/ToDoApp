<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoApp.MainPage">

    <ScrollView>
        <StackLayout>

            <Grid ColumnDefinitions="Auto, 2*, 3*" ColumnSpacing="15" Padding="10" BackgroundColor="LightBlue">
                <Label>Id</Label>
                <Label Grid.Column="1">Nazwa</Label>
                <Label Grid.Column="2">Opis</Label>
            </Grid>

            <CollectionView ItemsSource="{Binding TasksList}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto, 2*, 3*" ColumnSpacing="15" Padding="10">
                            <Label Text="{Binding Id}"/>
                            <Label Grid.Column="1" Text="{Binding Name}" FontAttributes="Bold"/>
                            <Label Grid.Column="2" Text="{Binding Desc}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
        </StackLayout>
    </ScrollView>

</ContentPage>
